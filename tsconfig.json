{
  "compilerOptions": {
    "baseUrl": "src", // Use "src" directly as the base URL
    "paths": {
      "@/*": ["./*"] // When baseUrl is "src", then "@/components" refers to "src/components"
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json" // If you have a separate tsconfig for Node.js environments (like Vite itself)
    }
  ]
}